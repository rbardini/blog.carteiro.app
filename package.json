{
  "name": "blog.carteiro.app",
  "version": "1.0.0",
  "description": "Carteiro for Android's blog",
  "homepage": "https://blog.carteiro.app",
  "main": "index.js",
  "scripts": {
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "markdownlint . --ignore-path .gitignore",
    "format": "prettier . --ignore-path .gitignore",
    "build": "node index.js",
    "start": "npm run build -- --development",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable"
  },
  "keywords": [
    "carteiro",
    "android",
    "blog",
    "metalsmith"
  ],
  "author": "Rafael Bardini",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rbardini/blog.carteiro.app.git"
  },
  "bugs": {
    "url": "https://github.com/rbardini/blog.carteiro.app/issues"
  },
  "license": "MIT",
  "dependencies": {
    "cssnano": "4.1.10",
    "jstransformer-pug": "0.4.0",
    "markdown-it-footnote": "3.0.2",
    "metalsmith": "2.3.0",
    "metalsmith-archive": "0.1.1",
    "metalsmith-assets-improved": "1.0.1",
    "metalsmith-collection-metadata": "1.0.0",
    "metalsmith-collections": "0.9.0",
    "metalsmith-html-minifier": "4.0.1",
    "metalsmith-ignore": "1.0.0",
    "metalsmith-layouts": "2.3.1",
    "metalsmith-markdownit": "0.5.0",
    "metalsmith-moment": "2.1.0",
    "metalsmith-move-up": "2.0.1",
    "metalsmith-permalinks": "2.2.0",
    "metalsmith-postcss": "4.2.0",
    "metalsmith-renamer": "0.5.85",
    "metalsmith-serve": "0.0.7",
    "metalsmith-sitemap": "1.2.2",
    "metalsmith-watch": "1.0.3",
    "postcss-color-mod-function": "3.0.3",
    "postcss-preset-env": "6.7.0",
    "pug": "3.0.2",
    "rss": "1.2.2",
    "turbolinks": "5.2.0",
    "yargs": "16.2.0"
  },
  "devDependencies": {
    "eslint": "7.22.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-standard": "5.0.0",
    "husky": "5.2.0",
    "lint-staged": "10.5.4",
    "markdownlint-cli": "0.27.1",
    "matter-now": "1.1.1",
    "npm-run-all": "4.1.5",
    "pinst": "2.1.6",
    "prettier": "2.2.1"
  }
}
